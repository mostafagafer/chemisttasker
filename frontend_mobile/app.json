{
  "expo": {
    "name": "chemisttasker",
    "slug": "chemisttasker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Chemisttasker-icon-1024-centered.png",
    "scheme": "frontendmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chemisttasker.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow camera access to add profile photos.",
        "NSPhotoLibraryUsageDescription": "Allow photo library access to upload profile photos and attachments.",
        "NSPhotoLibraryAddUsageDescription": "Allow saving images to your photo library."
      }
    },

    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Chemisttasker-icon-1024-centered.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.chemisttasker.app",
      "versionCode": 1
    },

    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Chemisttasker-splash-2048x3072.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-notifications",
      "expo-web-browser",
      "@react-native-firebase/app",
      "@react-native-firebase/crashlytics"
    ],

    "experiments": {
      "typedRoutes": true
    },

    "extra": {
      "eas": {
        "projectId": "75fa2fa5-e9ed-47af-a012-86967b951c5b"
      }
    }
  }
}
